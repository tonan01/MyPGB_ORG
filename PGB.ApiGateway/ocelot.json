{
  "Routes": [
    // --- AUTH SERVICE ROUTES (PUBLIC) ---
    {
      "UpstreamPathTemplate": "/api/v{version}/auth/register",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/v{version}/auth/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "Priority": 1
    },
    {
      "UpstreamPathTemplate": "/api/v{version}/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/v{version}/auth/login",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "Priority": 1
    },
    {
      "UpstreamPathTemplate": "/api/v{version}/auth/refresh",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/v{version}/auth/refresh",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "Priority": 1
    },

    // --- USER & AUTH PROTECTED ROUTES ---
    {
      "UpstreamPathTemplate": "/api/v{version}/users/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/v{version}/users/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "JwtBearer" },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0]",
        "X-User-Roles": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0]"
      },
      "Priority": 2
    },
    {
      "UpstreamPathTemplate": "/api/v{version}/users",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/api/v{version}/users",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "JwtBearer" },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0]",
        "X-User-Roles": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0]"
      },
      "Priority": 2
    },

    // --- TODO SERVICE ROUTES ---
    {
      "UpstreamPathTemplate": "/api/v{version}/todos/{everything}",
      "UpstreamHttpMethod": [ "GET", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/v{version}/todos/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "JwtBearer" },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0]",
        "X-User-Roles": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0]"
      }
    },
    {
      "UpstreamPathTemplate": "/api/v{version}/todos",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "DownstreamPathTemplate": "/api/v{version}/todos",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7002
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "JwtBearer" },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0]",
        "X-User-Roles": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0]"
      }
    },

    // --- CHAT SERVICE ROUTES ---
    {
      "UpstreamPathTemplate": "/api/v{version}/chat/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "DownstreamPathTemplate": "/api/v{version}/chat/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7003
        }
      ],
      "AuthenticationOptions": { "AuthenticationProviderKey": "JwtBearer" },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0]",
        "X-User-Roles": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0]"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7000",
    "RequestIdKey": "X-Correlation-Id"
  }
}