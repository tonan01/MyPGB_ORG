{
  "Routes": [
    // ... các route public ...
    {
      "DownstreamPathTemplate": "/api/user/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamPathTemplate": "/api/user/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[nameid] > value[0]",
        "X-User-Roles": "Claims[role]"
      },
      "Priority": 2
    },
    // Áp dụng tương tự cho các route khác cần phân quyền
    {
      "DownstreamPathTemplate": "/api/auth/logout",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamPathTemplate": "/api/auth/logout",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "X-User-Id": "Claims[nameid] > value[0]",
        "X-User-Roles": "Claims[role]"
      },
      "Priority": 1
    }
    // ...
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7000",
    "RequestIdKey": "X-Correlation-Id"
  }
}